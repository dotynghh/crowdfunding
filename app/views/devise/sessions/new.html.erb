<h2>登录</h2>
<div class="row">
  <div class="col-sm-5">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <ul class="list-unstyled">
            <li><i class="fa fa-exclamation-workingday"></i> <%= devise_error_messages! %></li>
        </ul>
      </div>

      <div class="form-group">
        <%= f.label "用户名" %><br />
        <%= f.text_field :username, autofocus: true, placeholder:"输入用户名", class:"form-control" %>
      </div>

      <div class="form-group">
        <%= f.label "密码" %><br />
        <%= f.password_field :password, autocomplete: "off", placeholder:"输入密码", class:"form-control" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="form-group">
          <%= f.check_box :remember_me %>
          <%= f.label "记住我" %>
        </div>
      <% end -%>

      <div class="form-group">
        <%= f.submit "登录", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>

<%#= render "devise/shared/links" %>
