<h2>注册</h2>
<div class="row">
  <div class="col-sm-5">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="form-group">
        <ul class="list-unstyled">
            <li><i class="fa fa-exclamation-workingday"></i> <%= devise_error_messages! %></li>
        </ul>
      </div>
      <div class="form-group">
        <%= f.label "用户名:" %><br />
        <%= f.text_field :username, autofocus: true, placeholder:"输入用户名", class:"form-control" %>
      </div>

      <div class="form-group">
        <%= f.label "密码:" %>
        <% if @minimum_password_length %>
        <em>(最少<%= @minimum_password_length %>位)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", placeholder:"输入密码", class:"form-control" %>
      </div>
      <div class="form-group">
        <%= f.label "确认密码:" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", placeholder:"确认密码", class:"form-control" %>
      </div>

        <%= f.submit "注册", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

<%#= render "devise/shared/links" %>
