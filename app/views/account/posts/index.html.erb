<div class="post-box">
<h1><%= render_project_name(@project) %>
    项目动态管理</h1>
<div class="pull-right">
    <%= link_to("发布动态",   new_account_project_post_path(@project), class: "btn btn-default")  %>
</div>
<table class="table table-boldered" , style="width: 100%; table-layout: fixed;">
    <thead>
        <tr>
            <th class="id">#</th>
            <th class="description">动态内容</th>
            <th class="oprate">操作  </th>
            <th class="create-time">创建时间</th>
        </tr>
    </thead>
    <tbody>
      <%  @posts.each_with_index do |post, index| %>
      <tr>
            <td><%= index + 1 %></td>
            <td><%= render_post_description(post) %></td>
            <td>
                <%= link_to("删除", account_project_post_path(post.project, post), method: :delete,  class: "btn btn-sm btn-danger" , data: {confirm: "确定删除该动态吗?"}) %>
            </td>

            <td><%= render_order_created_at(post.created_at) %></td>
        </tr>
        <% end %>
    </tbody>
</table>

<div class="text-center">
  <%= will_paginate @projects %>
</div>
</div>
