<% if ["new", "create"].include?(controller.action_name) %>
  <tr>
    <td><%= item.project.name %></td>
    <td><%= item.project.user.user_name %></td>
    <td><%= current_user.user_name.blank? ? current_user.email : current_user.user_name %></td>
    <td><%= item.price %></td>
    <td><%= item.quantity %></td>
    <td><%= render_payment_plan_description(item.description) %></td>
  </tr>
<% else %>
  <tr>
    <td><%= item.project.name %></td>
    <td><%= item.creator_name %></td>
    <td><%= item.user.user_name %></td>
    <td><%= item.total_price %></td>
    <td><%= item.quantity %></td>
    <td><%= render_payment_plan_description(item.plan_description) %></td>
  </tr>
<% end %>
